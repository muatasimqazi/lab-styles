<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#4b2e83</item>
        <item name="colorPrimaryDark">#b7a57a</item>
        <item name="colorAccent">#444444</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#4b2e83</item>
    </style>

    <style name="LabelStyle" parent="@style/TextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Gold" parent="@style/LabelStyle">
        <item name="android:background">#b7a57a</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/MediaButton">
        <item name="android:textSize">22sp</item>
    </style>

</resources>
